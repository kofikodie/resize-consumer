{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "moduleFileExtensions": ["ts", "js", "json"],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/tests/mocks/"
    ]
}
